{
  "extends": [
    "github>ShinobuTakahashi/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint packages"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "jest packages"
    },
    {
      "matchUpdateTypes": ["patch"],
      "excludePackagePatterns": ["engine-files-v\\d+", "@akashic/", "eslint", "jest"],
      "groupName": "patch dependencies"
    },
    {
      "matchUpdateTypes": ["minor"],
      "excludePackagePatterns": ["engine-files-v\\d+", "@akashic/", "eslint", "jest"],
      "groupName": "minor dependencies"
    },
    {
      "matchUpdateTypes": ["major"],
      "excludePackagePatterns": ["engine-files-v1", "engine-files-v2"]
    },
    {
      "matchPackageNames": ["engine-files-v1"],
      "allowedVersions": "<2.0",
      "groupName": "engine-files@1",
      "schedule": "at any time"
    }
  ]
}

