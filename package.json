{
  "private": true,
  "name": "@akashic/headless-driver",
  "version": "0.1.0",
  "description": "A library to execute contents using Akashic Engine headlessly",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/headless-driver.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "publish:patch": "lerna publish patch --yes",
    "publish:minor": "lerna publish minor --yes",
    "publish:major": "lerna publish major --yes",
    "publish:from_git": "lerna publish from-git --yes",
    "build": "lerna run build",
    "test": "lerna run test && npm run lint:md",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "changelog": {
    "repo": "akashic-games/headless-driver",
    "labels": {
      "breaking": "Breaking Change",
      "enhancement": "Enhancement",
      "bug": "Bug Fix",
      "documentation": "Documentation",
      "internal": "Internal"
    }
  },
  "devDependencies": {
    "lerna": "~3.13.1",
    "lerna-changelog": "~0.8.2",
    "remark-cli": "~2.0.0",
    "remark-lint": "~5.0.1",
    "semver": "~5.6.0"
  }
}
