{
  "name": "@akashic/headless-driver",
  "version": "0.2.2",
  "description": "A library to execute contents using Akashic Engine headlessly",
  "main": "lib/index.js",
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run build && npm run run:test && npm run lint",
    "run:test": "mocha ./lib/__tests__/index.js",
    "lint": "tslint -c ../tslint.json src/**/*.ts -p tsconfig.json -e \"**/node_modules/**\""
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "lib",
    "!lib/**/__tests__"
  ],
  "dependencies": {
    "@akashic/amflow": "0.2.2",
    "@akashic/headless-driver-runner": "0.2.1",
    "@akashic/headless-driver-runner-v1": "0.2.1",
    "@akashic/headless-driver-runner-v2": "0.2.1",
    "@akashic/playlog": "1.3.1",
    "@akashic/trigger": "0.1.5",
    "lodash.clonedeep": "4.5.0",
    "node-fetch": "2.3.0"
  },
  "devDependencies": {
    "@types/get-port": "4.0.0",
    "@types/http-server": "0.10.0",
    "@types/lodash.clonedeep": "4.5.4",
    "@types/mocha": "5.2.5",
    "@types/node-fetch": "2.1.2",
    "get-port": "4.0.0",
    "http-server": "0.11.1",
    "mocha": "5.2.0",
    "prettier": "1.14.3",
    "rimraf": "2.6.3",
    "tslint": "5.11.0",
    "typescript": "3.0.3"
  }
}
